<style> 
</style>
</head>
<body>
<div>
  <h1>00:00.00</h1>
</div>

<button>開始</button>
<button>暫停</button>
<button>圈</button>
<button>繼續</button>
<button>重設</button>
<script>
var miSec = 0;
var sec = 0;
var min = 0;
var h1 = document.querySelector('h1');

function displayTime() {
  if(miSec<99) {
    miSec++;
	h1.textContent = min.toString() + ':' + sec.toString() + ':' + miSec.toString();
  }
  else if (miSec===99) {
    if(sec<59) {
      miSec = 0;
      sec++;
	  h1.textContent = min.toString() + ':' + sec.toString() + ':' + miSec.toString();
	}
	else if (sec === 59) {
	   sec = 0;
	   min++;
	   h1.textContent = min.toString() + ':'+ sec.toString() + ':' + miSec.toString();
	}
  }
}

window.setInterval(displayTime, 10);
</script>

</body>
</html>
